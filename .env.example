# Application Settings
SECRET_KEY=change-this-to-a-random-secret-key-in-production
FLASK_ENV=production
FLASK_DEBUG=0

# Database Configuration
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_secure_password_here
MYSQL_DB=emotion_db

# Alternative: Full database URL (overrides individual settings if provided)
# DATABASE_URL=mysql+pymysql://user:password@host:port/database

# Upload Settings
UPLOAD_FOLDER=static/uploads
MAX_FILE_SIZE=16777216

# Model Paths
SPEECH_MODEL_PATH=models/speech_model.h5
SPEECH_SCALER_PATH=models/speech_scaler.pkl
TEXT_MODEL_PATH=models/text_model.h5
IMAGE_MODEL_PATH=models/image_model.h5
FUSION_MODEL_PATH=models/fusion_model.pkl
BERT_MODEL_PATH=models/bert_model

# Audio Processing Settings
SAMPLE_RATE=22050
AUDIO_DURATION=3
N_MFCC=40

# Text Processing Settings
MAX_TEXT_LENGTH=128

# Image Processing Settings
# IMAGE_SIZE is set in code as (224, 224)
